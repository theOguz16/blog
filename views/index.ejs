<section class="articles">
  <h2 class="articles-heading">Son Postlar</h2>
  <ul class="article-ul">
    <% data.forEach(post => { %>
    <li>
      <a href="/post/<%= post._id%>">
        <span><%= post.title %></span>
        <span class="article-list-date"
          ><%= post.createdAt.toLocaleString("tr-TR", {year: "numeric", month:
          "long",day: "numeric"}) %></span
        >
      </a>
    </li>
    <% }); %>
  </ul>

  <% if(nextPage!==null){ %>
  <a href="/?page=<%= nextPage %>" class="pagination">&lt; Daha Eski Postlar</a>
  <% } %>
</section>
