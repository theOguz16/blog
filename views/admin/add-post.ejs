<div class="admin-title">
  <h2>Yeni Post Ekle</h2>
</div>

<form action="/add-post" method="POST" enctype="multipart/form-data">
  <label for="title"><b>Başlık</b></label>
  <input type="text" placeholder="Post Başlığı" name="title" />

  <label for="body"><b>İçerik</b></label>
  <textarea type="textarea" name="body" cols="50" rows="10"> </textarea>

  <label for="postImage">
    <b>Post Resim: </b>
  </label>
  <input type="file" name="postImage" />
  <br />
  <hr />

  <p class="error"><%= message %></p>

  <input type="submit" value="EKLE" class="btn" />
</form>
